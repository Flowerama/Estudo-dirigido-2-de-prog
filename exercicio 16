<?php

print "diga o primeiro número";

$num1 = fgets (STDIN);

print "diga o segundo número";

$num2 = fgets (STDIN);

print "diga o terceiro número";

$num3 = fgets (STDIN);

print "diga o quarto número";

$num4 = fgets (STDIN);

print "diga o quinto número";

$num5 = fgets (STDIN);

$soma = $num1 + $num2+ $num3 + $num4 + $num5;

$media = $num1 + $num2+ $num3 + $num4 + $num5 / 5;

print" A soma dos números desejados é $soma e a média é $media";
